<%- include('layout', { title: 'Free Fire Registration' }) %>
<div class="card p-4 shadow-sm">
  <h3>Register for <%= tournament.name %> (Free Fire)</h3>
  <% if (errors && errors.length) { %>
    <div class="alert alert-danger">
      <ul>
        <% errors.forEach(e => { %><li><%= e.msg %></li><% }) %>
      </ul>
    </div>
  <% } %>
  <form method="post" action="/tournaments/<%= tournament.id %>/register">
    <div class="mb-3">
      <label class="form-label">Team Name</label>
      <input name="team_name" class="form-control" required value="<%= formData.team_name || '' %>">
    </div>
    <div class="mb-3">
      <label class="form-label">Leader Name</label>
      <input name="leader_name" class="form-control" required value="<%= formData.leader_name || '' %>">
    </div>
    <div class="mb-3">
      <label class="form-label">Leader Phone</label>
      <input name="leader_phone" class="form-control" required value="<%= formData.leader_phone || '' %>">
    </div>
    <div class="mb-3">
      <label class="form-label">Leader Email</label>
      <input name="leader_email" type="email" class="form-control" required value="<%= formData.leader_email || '' %>">
    </div>
    <div class="mb-3">
      <label class="form-label">Members (comma separated)</label>
      <input name="members" class="form-control" value="<%= formData.members || '' %>">
    </div>
    <div class="mb-3">
      <label class="form-label">In-game / IGN (required)</label>
      <input name="ingame" class="form-control" required value="<%= formData.ingame || '' %>">
    </div>
    <div class="mb-3">
      <label class="form-label">Payment Method</label>
      <div>
        <label class="me-3"><input type="radio" name="pay_method" value="stripe" checked> Pay by Card</label>
        <label><input type="radio" name="pay_method" value="manual"> Pay by UPI / QR</label>
      </div>
    </div>
    <% if (settings && (settings.payment_qr || settings.upi)) { %>
      <div class="alert alert-light">
        <% if (settings.payment_qr) { %>
          <img src="<%= settings.payment_qr %>" style="max-width:240px; display:block; margin-bottom:10px;">
        <% } %>
        <% if (settings.upi) { %>
          <div><strong>UPI:</strong> <%= settings.upi %></div>
        <% } %>
        <small class="text-muted">If you select UPI/QR, you'll be asked to upload payment proof and join WhatsApp group after payment.</small>
      </div>
    <% } %>
    <button class="btn btn-success">Proceed to Payment ($<%= (tournament.entry_fee/100).toFixed(2) %>)</button>
  </form>
</div>
